<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.All_Possibilities" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#00B8D4</item>
        <item name="colorPrimaryVariant">#00BFA5</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    //For Edit Texts
    <style name="Input.Integer" parent="Widget.AppCompat.EditText">
        <item name="android:ems">10</item>
       <item name="maxLines">1</item>
        <item name="android:inputType">numberSigned</item>
    </style>

    // Default text
    <style name="ActionText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
    </style>



    <style name="SpinnerSign" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">

    </style>

    <style name="AnswerItem" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>
